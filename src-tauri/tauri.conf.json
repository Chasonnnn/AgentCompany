{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AgentCompany",
  "version": "0.0.0",
  "identifier": "com.agentcompany.desktop",
  "build": {
    "beforeDevCommand": "pnpm build",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../desktop-react/dist"
  },
  "app": {
    "windows": [
      {
        "title": "AgentCompany",
        "width": 1400,
        "height": 920,
        "minWidth": 980,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://updates.agentcompany.dev/stable/latest.json"
      ],
      "pubkey": "REPLACE_WITH_TAURI_UPDATER_PUBKEY"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
